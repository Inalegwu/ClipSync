{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./src/*"],
      "@web/*": ["./src/web/*"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["src", "tailwind.config.js"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
