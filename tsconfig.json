{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["src", "tailwind.config.js"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
